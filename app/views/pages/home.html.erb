<div class="row">
    <div class="p-5 col-md-7">
        
        <div class="card" style="width: 18rem;">
            <h4 class="card-title">Pick your Starting 5!</h4>
            <img src="/assets/Team.jpeg" class="card-img-top" alt="Blank Basketball Team">
            <div class="d-grid gap-2 card-body">
                <% if @current_user.present? %>
                    <a href="/teams/new" class="btn btn-outline-danger btn-lg">Go!</a>
                <% else %>
                    <a href="/users/new" class="btn btn-outline-danger btn-lg">Go!</a>
                <% end %>
            </div>
        </div>
    </div>
    <div class="col-md-5">
        <img src="/assets/StephCurryHome.jpeg" class="img-fluid" alt="Steph Curry Cooking">
    </div>
</div>