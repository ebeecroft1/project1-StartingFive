<%= form_for @player do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :position %>
    <%= f.text_field :position %>

    <%= f.label :age %>
    <%= f.text_field :age %>

    <%= f.label :height %>
    <%= f.text_field :height %>
    
    <%= f.label :weight %>
    <%= f.text_field :weight %>

    <%= f.label :college %>
    <%= f.text_field :college %>
    
    <%= f.label :image %>
    <%= f.text_field :image %>

    2021 - 2022 Season Averages

    <%= f.label :points %>
    <%= f.number_field :points, step: :any %>
    
    <%= f.label :rebounds %>
    <%= f.number_field :rebounds, step: :any %>

    <%= f.label :assists %>
    <%= f.number_field :assists, step: :any %>
    
    <%= f.label :blocks %>
    <%= f.number_field :blocks, step: :any %>

    <%= f.label :steals %>
    <%= f.number_field :steals, step: :any %>

    <%= f.submit %>

<% end %>