<h1>Add new player</h1>

<form action="<%= players_path %>" method="post">
    <label>
        Name:
        <input name="name" required>
    </label>
    <label>
        Position:
        <input name="position" required>
    </label>
    <label>
        Age:
        <input name="age">
    </label>
    <label>
        Height:
        <input name="height">
    </label>
    <label>
        Weight (lbs):
        <input type="number" name="weight">
    </label>

    2021 - 2022 Season Averages
    <label>
        Points:
        <input type="number" step="any" name="points">
    </label>
    <label>
        Rebounds:
        <input type="number" step="any" name="rebounds">
    </label>
    <label>
        Assists:
        <input type="number" step="any" name="assists">
    </label>
    <label>
        Blocks:
        <input type="number" step="any" name="blocks">
    </label>
    <label>
        Steals:
        <input type="number" step="any" name="steals">
    </label>
    <label>
        College:
        <input name="college">
    </label>
    <label>
        Image:
        <input type="url" name="image">
    </label>

    <button>Add new player</button>

</form>
