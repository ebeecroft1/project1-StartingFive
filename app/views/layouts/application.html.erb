<!DOCTYPE html>
<html>
  <head>
    <title>Starting 5</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid">
        <a class="navbar-brand mb-0 h1" href="/">Starting 5</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/teams/new">Create New Team</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/teams">My Teams</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/players">Players</a>
            </li>
          </ul>
        </div>
        <% if @current_user.present? %>
          <% if @current_user.admin? %>
            <a class="nav-link active" aria-current="page" href="/users">All Users</a>
          <% end %>
          <%= link_to "Sign out #{ @current_user.email }", login_path, :method => 'delete', class: 'btn btn-outline-primary' %>
            
        <% else %>
          <a class="nav-link active" aria-current="page" href="/login">Login</a>
          <a class="btn btn-outline-primary" href="/users/new">Sign Up</a>
        <% end %>
      </div>
    </nav>

    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
